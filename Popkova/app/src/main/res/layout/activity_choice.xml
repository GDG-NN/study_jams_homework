<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="ru.ekaterinapopkova.cookbook.ChoiceActivity"
    android:background="@color/background_color"
    android:clickable="true">

    <TextView
        android:layout_width="400dp"
        android:layout_height="28dp"
        android:text="@string/choose_cat"
        android:id="@+id/textView3"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textColor="@color/text_color"
        android:textSize="22sp"
        android:textStyle="italic" />

    <ImageView
        android:layout_width="135dp"
        android:layout_height="100dp"
        android:id="@+id/snacks"
        android:layout_below="@+id/textView3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="false"
        android:onClick="onClick"
        android:src="@drawable/snacks"
        android:layout_marginTop="10dp"
        android:scaleType="centerCrop" />

    <ImageView
        android:layout_width="135dp"
        android:layout_height="100dp"
        android:id="@+id/salads"
        android:layout_below="@+id/textView3"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:onClick="onClick"
        android:src="@drawable/salads"
        android:scaleType="centerCrop"
        android:layout_marginTop="10dp"
        android:layout_marginRight="0dp" />

    <TextView
        android:layout_width="135dp"
        android:layout_height="wrap_content"
        android:text="@string/snackes"
        android:id="@+id/textView4"
        android:layout_below="@+id/snacks"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="@color/text_color"
        android:textSize="18sp"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:layout_marginBottom="5dp" />

    <TextView
        android:layout_width="135dp"
        android:layout_height="wrap_content"
        android:text="@string/salads"
        android:id="@+id/textView5"
        android:textColor="@color/text_color"
        android:textSize="18sp"
        android:layout_below="@+id/salads"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:layout_marginBottom="5dp" />

    <ImageView
        android:layout_width="135dp"
        android:layout_height="100dp"
        android:id="@+id/soups"
        android:onClick="onClick"
        android:src="@drawable/soups"
        android:scaleType="centerCrop"
        android:layout_above="@+id/textView7"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="135dp"
        android:layout_height="100dp"
        android:id="@+id/secdishes"
        android:onClick="onClick"
        android:src="@drawable/second"
        android:layout_below="@+id/textView5"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:scaleType="centerCrop"
        android:longClickable="true" />

    <TextView
        android:layout_width="135dp"
        android:layout_height="wrap_content"
        android:text="@string/soups"
        android:id="@+id/textView6"
        android:textColor="@color/text_color"
        android:textSize="18sp"
        android:layout_below="@+id/soups"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:layout_marginBottom="5dp" />

    <TextView
        android:layout_width="135dp"
        android:layout_height="wrap_content"
        android:text="@string/sec_dishes"
        android:id="@+id/textView7"
        android:textColor="@color/text_color"
        android:textSize="18sp"
        android:layout_below="@+id/secdishes"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:layout_marginBottom="5dp" />

    <ImageView
        android:layout_width="135dp"
        android:layout_height="100dp"
        android:id="@+id/drinks"
        android:onClick="onClick"
        android:src="@drawable/drinks"
        android:scaleType="centerCrop"
        android:layout_below="@+id/textView7"
        android:layout_alignLeft="@+id/textView7"
        android:layout_alignStart="@+id/textView7" />

    <TextView
        android:layout_width="135dp"
        android:layout_height="wrap_content"
        android:text="@string/drinks"
        android:id="@+id/textView8"
        android:textColor="@color/text_color"
        android:textSize="18sp"
        android:layout_below="@+id/drinks"
        android:layout_alignRight="@+id/drinks"
        android:layout_alignEnd="@+id/drinks"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:layout_marginBottom="5dp" />

    <ImageView
        android:layout_width="135dp"
        android:layout_height="100dp"
        android:id="@+id/desserts"
        android:layout_alignTop="@+id/drinks"
        android:layout_alignRight="@+id/textView6"
        android:layout_alignEnd="@+id/textView6"
        android:scaleType="centerCrop"
        android:onClick="onClick"
        android:src="@drawable/des" />

    <TextView
        android:layout_width="135dp"
        android:layout_height="wrap_content"
        android:text="@string/desserts"
        android:id="@+id/textView10"
        android:layout_below="@+id/desserts"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:gravity="center"
        android:textColor="@color/text_color"
        android:textSize="18sp"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp" />

</RelativeLayout>
