<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="10dp"
    android:background="@drawable/list_item_border">

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/condition_item_spinner"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        style="@style/listViewItem"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="10dp"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/condition_details"
        android:layout_toEndOf="@+id/condition_item_spinner"
        android:inputType="text"
        android:textColor="@color/conditionDetailsText"
        style="@style/listViewItem"/>

    <ImageView
        android:id="@+id/delete_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@android:drawable/ic_notification_clear_all"
        android:layout_alignTop="@+id/condition_item_spinner"
        android:layout_alignParentEnd="true" />

</RelativeLayout>